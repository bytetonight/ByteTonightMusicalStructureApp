<?xml version="1.0" encoding="utf-8"?>

<!-- https://github.com/futurice/android-best-practices#dimensxml -->

<resources>
    <!-- font sizes -->
    <dimen name="font_size_larger">22sp</dimen>
    <dimen name="font_size_large">18sp</dimen>
    <dimen name="font_size_normal">15sp</dimen>
    <dimen name="font_size_small">12sp</dimen>

    <!-- typical spacing between two views -->
    <dimen name="spacing_huge">40dp</dimen>
    <dimen name="spacing_large">24dp</dimen>
    <dimen name="spacing_normal">14dp</dimen>
    <dimen name="spacing_small">10dp</dimen>
    <dimen name="spacing_tiny">4dp</dimen>

    <!-- typical sizes of views -->
    <dimen name="button_height_tall">60dp</dimen>
    <dimen name="button_height_normal">40dp</dimen>
    <dimen name="button_height_short">32dp</dimen>

    <!-- possibly typical padding values -->
    <dimen name="padding_tiny">2dp</dimen>
    <dimen name="padding_normal">4dp</dimen>
    <dimen name="padding_large">8dp</dimen>
</resources>